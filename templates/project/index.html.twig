{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="/assets/css/project.css" />
{% endblock %}

{% block title %}Mon portfolio{% endblock %}

{% block main %}
    <main class="container cont-project">
        <section class="title-page tp-project">
            <h1>Mon portfolio</h1>
        </section>
        <section>
            <h2 class="sub-title">MES projets</h2>
            {% if myProjects is not empty %}
                {% for myProject in myProjects %}
                    <article class="project">
                        <h3 class="project-title pt-mobile">{{ myProject.title }}</h3>
                        <div class="picture-frame pf-project">
                            <img src="/assets/upload/{{ myProject.photo }}" />
                        </div>
                        <div>
                            <h3 class="project-title pt-desktop">{{ myProject.title }}</h3>
                            <p>{{ myProject.text }}</p>
                            <div class="project-links">
                                <a href="{{ myProject.linkWeb }}" target="blank"><i class="fas fa-globe"></i></a>
                                <a href="{{ myProject.linkGit }}" target="blank"><i class="fab fa-github"></i></a>
                                <a href="{{ myProject.linkVideo }}" target="blank"><i class="fas fa-play-circle"></i></a>
                                <a href="{{ myProject.linkInfos }}" target="blank"><i class="fas fa-info-circle"></i></a>
                            </div>
                        </div>
                    </article>
                    {% if app.user and is_granted("ROLE_ADMIN") %}
                        <div class="buttons-admin">
                            {% if myProject is empty %}
                                <a href="{{ path('project_new') }}">
                                    <input type="button" value="Nouveau" class="button-add">
                                </a>
                            {% endif %}
