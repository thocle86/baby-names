            <div class="buttons">
                <div class="button-left">
                    <a class="btn-return" href="{{ path('about_me') }}">Retour<i class="fas fa-door-open"></i></a>
                </div>
                <div class="button-right">
                    <button class="btn-valid">Valider<i class="fas fa-check"></i></button>
                </div>
            </div>

        {{ form_end(form) }}
    </main>
