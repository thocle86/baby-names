            Page d'Accueil
            <i class="fas fa-angle-double-right"></i></span>
        </h1>
        {{ form_start(form, {'attr' : {'class' : 'formContent'}}) }}

            {{ form_label(form.name) }}
            {{ form_errors(form.name) }}
